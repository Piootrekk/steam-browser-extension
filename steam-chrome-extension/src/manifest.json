{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Test",
  "version": "1.0.0",
  "description": "Test Vite Plugin Extension",

  "{{chrome}}.action": {
    "default_popup": "src/popup/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://steamcommunity.com/*"],
      "js": ["src/popup/popup.ts"],
      "css": ["src/popup/popup.css"]
    },
    {
      "matches": ["https://steamcommunity.com/market/"],
      "js": ["src/market/listings.ts", "src/market/history.ts"]
    },
    {
      "matches": [
        "https://steamcommunity.com/id*/inventory*",
        "https://steamcommunity.com/profiles*/inventory*"
      ],
      "js": ["src/inventory/inventory.ts"]
    }
  ],
  "background": {
    "{{chrome}}.service_worker": "src/background/background.ts",
    "{{firefox}}.scripts": ["src/background/background.ts"]
  }
}
